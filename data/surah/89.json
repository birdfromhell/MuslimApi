    },
    {
        "ar": "\u0648\u064e\u0641\u0650\u0631\u0652\u0639\u064e\u0648\u0652\u0646\u064e \u0630\u0650\u064a \u0627\u0644\u0652\u0623\u064e\u0648\u0652\u062a\u064e\u0627\u062f\u0650",
