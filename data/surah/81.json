        "tr": "wam<u>aa</u> <u>shaah</u>ibukum bimajnuun<strong>in</strong>"
    },
    {
        "ar": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u0652 \u0631\u064e\u0622\u0647\u064f \u0628\u0650\u0627\u0644\u0652\u0623\u064f\u0641\u064f\u0642\u0650 \u0627\u0644\u0652\u0645\u064f\u0628\u0650\u064a\u0646\u0650",
